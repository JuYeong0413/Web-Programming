        <form action="checkId.jsp" method="post">
        <td><img src="image/dot.png" width="12" height="12"> 아이디<span style="color: red">*</span></td>
        <input type="hidden" name="idCheck" value="unchecked">
        <td><input name="id" value="" id="id" placeholder="로그인 시 사용" type="text" onkeydown="idCheck()"/><input type="submit" value="중복확인" onclick="checkId.jsp">
        </form>
        </td>
        <td><img src="image/dot.png" width="12" height="12"> 닉네임<span style="color: red">*</span></td>
        <td><input name="nickname" value="" id="nickname" placeholder="후기 작성시 사용" type="text" onkeydown="nicknameCheck()"/><input type="submit" value="중복확인" onclick="checkNickname.jsp">
        <input type="hidden" name="nicknameCheck" value="unchecked">
        </td>
