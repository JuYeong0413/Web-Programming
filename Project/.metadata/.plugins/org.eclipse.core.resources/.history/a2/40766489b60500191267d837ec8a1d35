  <%
	String input = request.getParameter("search");
    Connection conn = null;
    Statement stmt = null;
    String sql = null;
    ResultSet rs = null;
    
    try {
    	Class.forName("com.mysql.jdbc.Driver");
    	String jdbcurl = "jdbc:mysql://localhost:3306/cafeGO";
    	conn = DriverManager.getConnection(jdbcurl, "project", "cafego");
    	stmt = conn.createStatement();
    	sql = "select * from cafe_tbl where name like '%" + input + "%'";
    	rs = stmt.executeQuery(sql);
    }
    catch(Exception e) {
    	out.println("DB 연동 오류. : " + e.getMessage());
    }

    while(rs.next())
    {
    	
    }
  %>
  
  <h1><span style="color: red">"<%= input %>"</span>이 포함된 카페명 검색 결과</h1>
  <hr noshade align="left" width="120" size="3">
  <!-- 화면 출력 부분 넣어야 함 -->
    
  <%
    stmt.close();
    conn.close();
  %>
