	  String sql = "select nickname from user_tbl where id = " + userId;
	  rs = stmt.executeQuery(sql);
  }
  catch(Exception e) {
	  out.println("DB 연동 오류. : " + e.getMessage());
  }
  
  while(rs.next()) {
	  name = rs.getString("nickname");
  }
  
