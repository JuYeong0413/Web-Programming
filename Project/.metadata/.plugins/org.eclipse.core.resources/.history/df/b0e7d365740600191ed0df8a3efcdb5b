	  out.println("DB 연동 오류. : " + e.getMessage());
  }
  
  while(rs.next()) {
	  cnt = Integer.parseInt(rs.getString("cnt"));
	  if(cnt != 0)
		  newId = Integer.parseInt(rs.getString("maxId"));
  }
  
  newId++;
