<script type="text/javascript">
function formcheck(){
if(fr.name.value == "") {
    alert("이름을 입력해주세요.");
    fr.name.focus();
    return false;
  }
else if(fr.id.value == "") {
    alert("아이디를 입력해주세요.");
    fr.id.focus();
    return false;
  }
else if(fr.nickname.value == "") {
    alert("닉네임을 입력해주세요.");
    fr.nickname.focus();
    return false;
  }
else if(fr.password.value == "") {
    alert("비밀번호를 입력해주세요.");
    fr.password.focus();
    return false;
  }
else if(fr.password.value != fr.password_c.value) {
    alert("비밀번호가 일치하지 않습니다.");
    fr.password.focus();
    return false;
  }
else if(fr.email.value == "") {
    alert("이메일을 입력해주세요.");
    fr.email.focus();
    return false;
  }
  else {
	  location.href="infoModify-db.jsp";
	  return true;
  }
}
</script>
