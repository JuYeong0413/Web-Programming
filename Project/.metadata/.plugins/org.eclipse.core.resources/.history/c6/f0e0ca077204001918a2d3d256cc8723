<script>
	function deleteClick() {
		var flag = confirm("작성하신 글을 삭제하시겠습니까?\n삭제된 글은 복구될 수 없습니다.");
		  
		if(flag) { // 확인 버튼 클릭시
			location.href="reviewDelete-db.jsp?id=<%= id%>";  
		}
		else { // 취소 버튼 클릭시
			  
		}
	}
</script>

